{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article>
      <h2>{{cars.name}}
      </h2>
      <h4>
        {% if cars.inStock %}
          In Stock
        {% else %}
          Out of Stock
        {% endif %}
      </h4>
      <h4>The color of this car is:
        {{cars.color}}
      </h4>
      {% if cars.owner == userId %}
        <div class="btn-group">
          {%- comment -%}
            first button will send us to the edit page
          {%- endcomment -%}
          <a class="btn btn-primary" href="/cars/edit/{{cars.id}}">Edit</a>
          {%- comment -%}
            the second button(which will actually be a form, will send a DELETE request)
          {%- endcomment -%}
          <form action="/cars/{{cars.id}}?_method=DELETE" method="POST">
            <input class="btn btn-danger" type="submit" value="Delete">
          </form>
        </div>
      {% endif %}
    </article>
  </div>
{% endblock %}}}